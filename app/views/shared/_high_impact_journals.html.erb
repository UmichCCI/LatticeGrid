<% if @limit_to_highimpact %>
<p style="font-weight:bold; margin-top: 6pt;">Statistics on this page are limited to abstracts in
	<%= pluralize(@high_impact_journals.length, 'high-impact journal') %>:
	<% if @high_impact_journals.length <= 6 %>
		<span class='ccsg_journal_listing'><%= @high_impact_journals.map(&:journal_abbreviation).to_sentence %>
	<% else %>
		<span id='ccsg_journal_show'>Show  &#10162;</span>
	<% end %>
</p><% if @high_impact_journals.length > 6 %>
	<table class='ccsg_journal_listing' style='display: none;'>
	<% groups = @high_impact_journals.map(&:journal_abbreviation).in_groups(5, '&nbsp;')
	(0..groups.map(&:length).max).each do |i| %>
	<tr>
		<% groups.each do |group| %>
		<td><%= group[i] %></td>
		<% end %>
	</tr>
	<% end %>
	<script type="text/javascript">
	$j(function () {
		$j('#ccsg_journal_show').click(function() {
			$j('table.ccsg_journal_listing').toggle();
		});
	});
	</script>
	</table>
<% end # length > 5 %>
<% end # limit_to_highimpact %>
